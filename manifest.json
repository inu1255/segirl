{
  "name": "划姬",
  "description": "不止是划词翻译,你的划词贤内助",
  "author": "inu1255",
  "homepage_url": "https://github.com/inu1255/segirl",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "scripting",
    "offscreen",
    "webRequest"
  ],
  "host_permissions": [
    "https://fanyi.sogou.com/"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_title": "划姬",
    "default_icon": "icons/48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end",
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://*/*"
      ],
      "resources": [
        "icons/*"
      ]
    }
  ],
  "version": "1.0.1"
}